/* cover 专属样式 维护 */
.cover{
  position: relative;
}
.cover image{
  height: 38.2vh;

}

.cover .content{
  /* 定位后会离开文档流 没有宽度 */
  position: absolute;
  bottom: 0;
  background-color: rgba(0, 0, 0, .3);
  width: 100%;
  color: white;
  /* 文档流块级元素独占一行
    flex 方便的解决左右布局 布局的内部block元素不会换行，黑洞一样是新的布局上下文
  */
  display: flex;
  /* justify-content: space-between; */
  align-items: flex-end;  /* 底部对齐 */
 
  padding: 16rpx 32rpx;
}
.cover .content .header{
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 4rpx;

}

.cover .sub-header{
  font-style: 26rpx;
  font-weight: normal;
  text-transform: uppercase;
}
.cover .meta{
  font-style: 26rpx;
  width: 30vw;
}
